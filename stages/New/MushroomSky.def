
;--------------------------------------------------------
[Info]
 ;Name of the stage.
name = "Mushroom Skyland"
displayname = "Mushroom Skyland"     
author = "xcheatdeath" ; I stole the bgctrl code and the coin/floor/pipes sprites from mariobros by "Leonardo" & Most of the character sprites in the stage came from Bowser by k6666orochi      

;--------------------------------------------------------
[Camera]
 ;Camera starting position: Usually 0 for both
startx = 0
starty = 0
boundleft = -325
boundright = 325
boundhigh = -400
boundlow=-25
verticalfollow = 1.1
floortension = 175
tension = 180
overdrawhigh = 0
overdrawlow = 0
cuthigh = 35
cutlow = 25

;--------------------------------------------------------
[PlayerInfo]
;--- Player 1 ---
 ;Player 1 starting coordinates.
 ;p1startx is typically -70 and p2startx is 70.
 ;p1starty and p1startz should be 0.
p1startx = -140          ;Starting x coordinates
p1starty = 0            ;Starting y coordinates
p1startz = 0            ;Starting z coordinates
p1facing = 1            ;Direction player faces: 1=right, -1=left

;--- Player 2 ---
p2startx = 140
p2starty = 0
p2startz = 0
p2facing = -1

;--- Common ---
 ;Don't change these values.
leftbound  = -1000 ;Left bound (x-movement)
rightbound =  1000 ;Right bound

;--------------------------------------------------------
[Bound]
 ;Distance from left/right edge of screen that player can move to
 ;Typically 15
screenleft = 15    ;Dist from left of screen that player can move to
screenright = 15   ;Right edge

;--------------------------------------------------------
[StageInfo]
zoffset = 385
autoturn=1
resetBG = 0
localcoord = 640,480
xscale = 1
yscale = 1

;--------------------------------------------------------
[Shadow]
intensity=100
yscale=0.10
fade.range=-100,0

[Reflection]
intensity=0

;--------------------------------------------------------
[Music]
bgmusic = sound/Theme Super Mario World.mp3
bgmvolume = 255


